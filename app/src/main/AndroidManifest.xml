<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.heg.schedule"
          xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name="com.heg.schedule.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        tools:replace="label"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.heg.schedule.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.heg.schedule.platform.PlatformActivity"
            android:label="@string/title_activity_platform"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.heg.schedule.platform.PlatformEditActivity"
            android:label="@string/title_activity_platform_edit">
        </activity>
        <activity
            android:name="com.heg.schedule.project.ProjectActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.heg.schedule.project.ProjectEditActivity">
        </activity>
        <activity
            android:name="com.heg.schedule.demo.EditDemoActivity"
            android:label="@string/title_activity_edit_demo">
        </activity>
        <activity
            android:name="com.heg.schedule.setting.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name="com.heg.schedule.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>